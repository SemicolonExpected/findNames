#ifndef QUADRATIC_PROBING_H
#define QUADRATIC_PROBING_H

#include <vector>
#include <algorithm>
#include <functional>
#include <string>
using namespace std;

bool isPrime( int n );
int nextPrime( int n );

// QuadraticProbing Hash table class (Weiss, modified by Jose Uribe)
//Soldier pairs are used. We hash the first element of the pair, the ID, and store the entire object in the table.
//Our payload is the position data, our key: the ID.
// CONSTRUCTION: an approximate initial size or default of 101
//
// ******************PUBLIC OPERATIONS*********************
// bool insert( x )       --> Insert x
// bool remove( x )       --> Remove x
// bool contains( x )     --> Return true if x is present
// void makeEmpty( )      --> Remove all items
// int hashCode( string str ) --> Global method to hash strings

template <typename HashedObj>
class HashTable
{
  public:
    explicit HashTable( int size = 101 ) : array( nextPrime( size ) )
      { makeEmpty( ); }

    bool contains( const HashedObj & x ) const
    {
        return isActive( findPos( x ) );
    }

    HashedObj operator[](const int iD)//Used to return the position
    {
	int currentPos = findPos( iD );
	if( isActive(currentPos) ){
		HashedObj nullItem;
		return nullItem;
	}
	
	HashedObj returned_Item = array[ currentPos ].element;
	return returned_Item;
    }

    void makeEmpty( )
    {
        currentSize = 0;
	//array.clear();//Destroy all objects in the array.
        for( auto & entry : array )
            entry.info = EMPTY;
    }

    bool insert( HashedObj & x )
    {
            // Insert x as active
        int currentPos = findPos( x.return_iD() );
        if( isActive( currentPos ) )
            return false;

        array[ currentPos ].element = x;
        array[ currentPos ].info = ACTIVE;

            // Rehash; see Section 5.5
        if( ++currentSize > array.size( ) / 2 )
            rehash( );

        return true;
    }
    
    bool insert( HashedObj && x )
    {
            // Insert x as active
        int currentPos = findPos( x.return_iD() );
        if( isActive( currentPos ) )
            return false;

        array[ currentPos ] = std::move( x );
        array[ currentPos ].info = ACTIVE;

            // Rehash; see Section 5.5
        if( ++currentSize > array.size( ) / 2 )
            rehash( );

        return true;
    }

    bool remove( const HashedObj & x )
    {
        int currentPos = findPos( x.return_iD() );
        if( !isActive( currentPos ) )
            return false;

        array[ currentPos ].info = DELETED;
        return true;
    }

    void update_Element( int iD, int newPosition )
    {
	//cout << "iD: " << iD << " is now going to be at position: " << newPosition << endl;
	int position( findPos( iD ) );
	//if( !isActive(position) ) return;

	HashedObj to_be_Updated = array[ position ].element;
	//cout << "we have retrieved soldier: " << to_be_Updated.return_iD() << endl;
	to_be_Updated.set_Position(newPosition);
	array[ position ] = to_be_Updated;

	to_be_Updated = array[position].element;
	//cout << "soldier iD: " << to_be_Updated.return_iD() << " is now at position " << to_be_Updated.return_Position() << endl;
	//cout << "END QUADRATIC PROBE" << endl;
    }


    enum EntryType { ACTIVE, EMPTY, DELETED };

  private:
    struct HashEntry
    {
        HashedObj element;
        EntryType info;

        HashEntry( const HashedObj & e = HashedObj{ }, EntryType i = EMPTY )
          : element{ e }, info{ i } { }
        
        HashEntry( HashedObj && e, EntryType i = EMPTY )
          : element{ std::move( e ) }, info{ i } { }
    };
    
    vector<HashEntry> array;
    int currentSize;

    bool isActive( int currentPos ) const
      { return array[ currentPos ].info == ACTIVE; }

    int findPos( int value ) const
    {
        int offset = 1;
        int currentPos = myhash( value );//Hash against the iD number.
	HashedObj currentElement = array[ currentPos ].element;
	int currentiD = currentElement.return_iD();

        while( array[ currentPos ].info != EMPTY &&
               currentiD != value )
        {
            currentPos += offset;  // Compute ith probe
            offset += 2;
            if( currentPos >= array.size( ) )
                currentPos -= array.size( );
        }

        return currentPos;
    }

    void rehash( )
    {
        vector<HashEntry> oldArray = array;

            // Create new double-sized, empty table
        array.resize( nextPrime( 2 * oldArray.size( ) ) );
        for( auto & entry : array )
            entry.info = EMPTY;

            // Copy table over
        currentSize = 0;
        for( auto & entry : oldArray )
            if( entry.info == ACTIVE )
                insert( std::move( entry.element ) );
    }

    int myhash( int x ) const
    {
        return x % array.size( );
    }
};

bool isPrime( int n )
{
    if( n == 2 || n == 3 )
        return true;

    if( n == 1 || n % 2 == 0 )
        return false;

    for( int i = 3; i * i <= n; i += 2 )
        if( n % i == 0 )
            return false;

    return true;
}

/**
 * Internal method to return a prime number at least as large as n.
 * Assumes n > 0.
 */
int nextPrime( int n )
{
    if( n % 2 == 0 )
        ++n;

    for( ; !isPrime( n ); n += 2 )
        ;

    return n;
}

#endif
